{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug",
            "type": "shell",
            "command": "CMake",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "-G",
                "NMake Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ],
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "nmake",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}